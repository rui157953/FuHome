<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D9D9D9"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobile.fuhome.app.ControlActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/hello_world"
            android:textColor="#609C17"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Tv_ztn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态量："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Tv_ztl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:text="---------"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Tv_txts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="响    应："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Tv_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:text="---------"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/E_com"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="0.3"
                android:textSize="14sp" />

            <Button
                android:id="@+id/B_send"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:text="发 送" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/B_open"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="打 开" />

                <Button
                    android:id="@+id/B_close"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="关 闭" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/b_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/b_feellist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:orientation="horizontal">


            <!-- 添加一个传感器ListView控件 -->
            <ListView
                android:id="@+id/feel_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:paddingTop="1px"

                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/b_comlist1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <Button
                android:id="@+id/B_com1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/B_com2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/B_com3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_comlist2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <Button
                android:id="@+id/B_com4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/B_com5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/B_com6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_comlist3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <Button
                android:id="@+id/B_com7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/B_com8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/B_com9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>

