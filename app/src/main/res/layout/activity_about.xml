<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_fuhome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="未来之家，让科技融入生活" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/wx" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="\n        当前版本4.0
        你可以控制LED，机器人，小车，马桶，没看错啦，只要你想···要想轻松实现远程控制\n
        关注微信公众号:fu_home 或者麻烦扫一扫上面咯！更新，进度，通知，都会通过微信及时发布！\n
        只能帮你到这了！\n
        4.0更新日志：1、符合新协议的app第一次更新"
                android:textSize="16sp" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_getVersion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="检查更新" />
</LinearLayout>